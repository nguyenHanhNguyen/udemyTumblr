<!DOCTYPE html>
<html>
<head>
  <title>Tumble</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway' %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sidebar">
  <ul>
    <li class="category"><%= link_to "Tumblr", root_path %></li>
    <li><%= link_to "Posts", root_path %></li>
    <li> About</li>
  </ul>

  <p class="sign_in"> User login</p>
</div>

<div id="main_content">
  <div id="header">
    <p> Post Feed</p>

    <div class="button">
      <button class="button"><%= link_to "Make post", new_post_path %></button>
      <button class="button">Log out</button>
    </div>
  </div>

  <%= flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
  <% end %>

</div>

<!--render entire application-->
<%= yield %>

</body>
</html>
